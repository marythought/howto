<h1><%= @howto_list.name %></h1>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @howto_list.steps.each do |step| %>
      <tr>
        <td id="<%= dom_id(step) %>"><%= step.description %></td>
        <td><%= link_to 'Edit', edit_howto_list_step_path(step) %></td>
        <td><%= link_to 'Destroy', howto_list_step_path(step), method: :delete, data: { confirm: "are you sure?" } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_howto_list_step_path %>
<%= link_to 'Back', howto_lists_path %>
